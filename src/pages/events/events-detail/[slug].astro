import eventsData from '../../../data/eventsData.json';
type Event = {
    id: string;
    title: string;
    category: string;
    start: string;
    end: string;
    place: string;
    award: string;
    speaker: string;
    youtube: string;
    links: { label: string; source: string; href: string; }[];
    participants: string;
    keyword: string[];
    desc: string;
    photos: string[];
    time: string;
}

export function getStaticPaths() {
    const eventsList = eventsData as unknown as Event[];
    return eventsList.map((event) => ({
        params: { slug: event.id },
    }));
}

const { slug } = Astro.params;
const event = (eventsData as unknown as Event[]).find(event => event.id === slug);
if (!event) {
    console.error(`Event with id ${slug} not found`);
    Astro.redirect('/events');
}
