                            <h3 class="text-lg font-bold text-slate-900 mb-2 group-hover:text-blue-900 transition-colors line-clamp-2">${event.title}</h3>
                            ${shortDesc ? `<p class="text-sm text-slate-600 line-clamp-2 mb-3">${shortDesc}</p>` : ''}
